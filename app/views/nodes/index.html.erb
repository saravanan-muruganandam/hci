<h1>Listing nodes</h1>

<table class="table table-striped">
  <tr>
    <th> ID </th>
    <th>Name</th>
    <th>X</th>
    <th>Y</th>
    <th>Mark</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td> <%= node.id %> </td>
    <td><%= node.name %></td>
    <td><%= node.x %></td>
    <td><%= node.y %></td>
    <td><%= node.mark_id %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if !@map.nil? %>
  <%= link_to 'New Node', new_map_node_path(@map) %> |
  <%= link_to 'Back to Map', map_path(@map) %>
<% else %>
  <%= link_to 'New Node', new_node_path() %>
<% end %>
